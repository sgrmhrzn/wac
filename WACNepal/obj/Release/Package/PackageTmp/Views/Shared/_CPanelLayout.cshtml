
<!DOCTYPE html>
<html>
<head>
    @{
        ViewBag.Title = "Home Page";
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload</title>
    @*<script src="../../Scripts/tinymce/tinymce.min.js"></script>*@
    <link rel="stylesheet" href="../../Content/image-crop-styles.css">
    @Styles.Render("~/Content/css")

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/AngularJs/angular.min.js"></script>
    <script src="~/Scripts/AngularJs/angular-sanitize.min.js"></script>
    <script src="~/Scripts/AngularJs/angular-ui-route.js"></script>
    <script src="~/Scripts/tinymce/tinymce.js"></script>

    <script src="~/Scripts/Application/Modules/application.js"></script>
    <script src="~/Scripts/Application/Modules/image-crop.js"></script>
    <script src="~/Scripts/Application/Modules/news.js"></script>
    <script src="~/Scripts/Application/Modules/project.js"></script>
    <script src="~/Scripts/Application/Modules/successStories.js"></script>
    <script src="~/Scripts/Application/Modules/gallery.js"></script>
    <script src="~/Scripts/Application/Controllers/CPanel.js"></script>
    <script src="~/Scripts/Application/Controllers/imgCropperCntrl.js"></script>
    <script src="~/Scripts/Application/Controllers/newsController.js"></script>
    <script src="~/Scripts/Application/Controllers/successStoriesController.js"></script>
    <script src="~/Scripts/Application/Services/newsEntity.js"></script>
    <script src="~/Scripts/Application/Services/projectEntity.js"></script>
    <script src="~/Scripts/Application/Services/storiesEntity.js"></script>
    <script src="~/Scripts/Application/Controllers/galleryCtrl.js"></script>
    <script src="~/Scripts/Application/Services/galleryEntity.js"></script>

    </head>
    <body data-ng-app="application">
        @if (Session["isLoggedIn"] != "LoggedIn")
        {
            @Html.Partial("_LoginPartial")
        }
        else
        {

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a ui-sref="CPanel" class="navbar-brand">Upload</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a ui-sref="CPanelProjects">Projects</a></li>
                        <li><a ui-sref="CPanelStories">Success</a></li>
                        <li><a ui-sref="CPanelNews">News</a></li>
                        <li><a ui-sref="CPanelGallery">Gallery</a></li>
                    </ul>
                    <ul class="nav navbar-nav pull-right">
                        <li class="pull-right">@Html.ActionLink("Log Out", "LogOff", "CPanel", FormMethod.Post)</li>
                    </ul>
                </div>
                
            </div>
        </div>
        }
        <div class="container body-content" style="min-height:500px;max-width:1300px;margin:auto">

            @RenderBody()
@if (Session["isLoggedIn"] == "LoggedIn")
{
            <div class="main-content" ui-view></div>
            <hr />
}

            <style>
                .textLimit {
                    line-height: 1.3em;
                    height: 4em;
                    overflow: hidden;
                }

                .uploadMain {
                    font-size: 12px;
                    font-family: Helvetica, Arial;
                    margin: 0;
                    padding: 0;
                    text-align: center;
                }

                .cropped {
                    margin: 5%
                }

                .add-edit-box {
                    position: absolute;
                    margin: 10% 9%;
                    z-index: 99;
                    top: 0px;
                    left: 0px;
                    background-color: aliceblue;
                    border: thin solid gray;
                    width: 1100px;
                    padding: 5%;
                }

                .btnAdd, .btnRed {
                    display: inline-block;
                    margin: 10px
                }

                body {
                    font-size: 14px;
                }
                .loading-outer {
                    position: fixed;
                    width: 100%;
                    height: 100%;
                    z-index: 9999;
                    overflow: hidden;
                    left: 0;
                    top: 40%;
                }
                .loading {
                    margin: auto;
                    z-index: 99999;
                    background-color: aliceblue;
                    border: thin solid gray;
                    width: 250px;
                    padding: 2%;
                }

                #footer-triangle {
                    max-width: 500px;
                    height: 0;
                    border-bottom: 250px solid #3e9bd6;
                    border-right: 250px solid transparent;
                    position: relative;
                }

                #bottom-footer a {
                    color: #0f202f;
                }

                    #bottom-footer a:hover {
                        text-decoration: underline;
                    }

                #footer-box {
                    display: inline-flex;
                    width: auto;
                }

                #footer-right {
                    background-color: #3e9bd6;
                    max-width: 800px;
                    color: aliceblue;
                    padding: 3% 5%;
                    display: inline-block;
                }

                footer #col-2 {
                    text-align: left;
                }
            </style>
            
        </div>

    </body>
</html>
